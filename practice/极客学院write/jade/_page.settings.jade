// 个人中心类设置页

extends _page.base

- var PAGE_TITLE = 设置中心

block main
	.container.thumbnail
			.row
				block menu
					ul#mytab.col-xs-3.nav.nav-tabs.nav-stacked
						// 左侧菜单
						li
							h3 设置
						li.active
							a(href="#user-data",data-toggle="tab") 基础资料
						li
							a(href="#password",data-toggle="tab") 修改密码
						li
							a(href="#binding",data-toggle="tab") 绑定
				block content
					section#myTabContent.col-xs-9.tab-content
						// 右侧内容
						#uaer-data.tab-pane.active
							// 基础资料
							form.form-horizontal(role="form")
								.from-group
									label.col-xs-2.control-lable(for="use-name") 昵称
									.col-xs-10
										input#user-name.from-control(type="text",placeholder="请输入昵称")
								.from-group
									label.col-xs-2.control-lable(for="signature") 签名
									.col-xs-10
										textarea#signature.from-control(type="text",placeholder="请输入个人签名")
								.from-group
									label.col-xs-2.control-lable(for="signature") 头像
									.col-xs-10
										img.img-circle(src="")
										input#user-img(type="file")
								button.btn.btn-default(type="submit") 确认
						#password.tab-pane
							// 修改密码
							form.form-horizontal(role="form")
								.from-group
									label.col-xs-2.control-lable(for="old-password") 原始密码
									.col-xs-10
										input#user-name.from-control(type="text",placeholder="")
								.from-group
									label.col-xs-2.control-lable(for="new-password") 新密码
									.col-xs-10
										input#signature.from-control(type="text",placeholder="")
								.from-group
									label.col-xs-2.control-lable(for="confirm-password") 确认密码
									.col-xs-10
										input#signature.from-control(type="text",placeholder="")
								button.btn.btn-default(type="submit") 确认
						#binding.tab-pane
							// 绑定
							ul.nav.nav-stacked
								li
									a(href"")
										span.badge.pullright 去绑定
										span 邮箱
								li
									a(href"")
										span.badge.pullright 去绑定
										span 手机
								li
									a(href"")
										span.badge.pullright 去绑定
										span QQ
								li
									a(href"")
										span.badge.pullright 去绑定
										span 微博
								li
									a(href"")
										span.badge.pullright 去绑定
										span 微信