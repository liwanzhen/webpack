// 找回密码

extends login-bind

block bind-head
	h3 找回密码
block bind-desc
	.row
		.col-xs-3
			span 输入邮箱
		.col-xs-3
			span 验证
		.col-xs-3
			span 更换密码
		.col-xs-3
			span 设置成功
	.progress
		.progress-bar(role="progressbar",aria-valuenow="25",aria-valuemin="0" aria-valuemax="100" style="width: 25%;")
			span.sr-only 25%完成
block bind-btn
	form
		input(type="text")
		.row
			.col-xs-8
				input(type="text")
			.col-cs-4
				button.btn.btn-default 验证码
		button.btn.btn-default 下一步